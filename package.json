{
  "name": "sniffmail",
  "version": "1.0.2",
  "description": "Email validation library that detects disposable/burner email addresses and verifies mailbox existence",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src/data"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "scrape": "npx tsx scripts/scrape-domains.ts",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sniffmail/sniffmail.git"
  },
  "homepage": "https://sniffmail.io",
  "bugs": {
    "url": "https://github.com/sniffmail/sniffmail/issues"
  },
  "keywords": [
    "email",
    "validation",
    "disposable",
    "burner",
    "temporary",
    "spam",
    "smtp",
    "verification",
    "sniffmail"
  ],
  "author": "Sniffmail <hello@sniffmail.io>",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "node-email-verifier": "^4.0.0",
    "p-limit": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "puppeteer": "^21.0.0",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "ioredis": "^5.3.0"
  },
  "peerDependenciesMeta": {
    "ioredis": {
      "optional": true
    }
  }
}
